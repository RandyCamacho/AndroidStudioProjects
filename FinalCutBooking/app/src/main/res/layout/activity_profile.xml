<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profileActivity" android:background="@android:color/black">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@drawable/logo_final" android:id="@+id/profile_image"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Book Now"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/bookNow_button"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_buttons"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            app:layout_constraintStart_toStartOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="@+id/profile_image" android:textSize="20sp"
            android:textColor="@android:color/white"/>
    <Button
            android:text="Current Bookings"
            android:background="@drawable/rounded_buttons"
            android:layout_width="0dp"
            android:layout_height="50dp" android:id="@+id/current_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bookNow_button"
            app:layout_constraintStart_toStartOf="@+id/bookNow_button"
            app:layout_constraintEnd_toEndOf="@+id/bookNow_button" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="20sp" android:textColor="@android:color/white"/>
    <Button
            android:text="Get Directions"
            android:layout_width="0dp"
            android:background="@drawable/rounded_buttons"
            android:layout_height="50dp" android:id="@+id/pDirections_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/current_button"
            app:layout_constraintStart_toStartOf="@+id/current_button"
            app:layout_constraintEnd_toEndOf="@+id/current_button"
            android:textColor="@android:color/white"
            android:textSize="20sp" app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:text="Sign Out"
            android:background="@drawable/rounded_buttons"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/signOut_button"
            app:layout_constraintStart_toStartOf="@+id/current_button"
            app:layout_constraintEnd_toEndOf="@+id/current_button" android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pDirections_button"/>
</android.support.constraint.ConstraintLayout>