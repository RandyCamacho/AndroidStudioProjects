<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bookingActivity" android:background="@android:color/black">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="122dp"
                tools:layout_editor_absoluteX="0dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Book Your Cut"
                    android:layout_width="0dp"
                    android:layout_height="50dp" android:id="@+id/bookTitle_textview"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:textSize="20sp" android:textColor="@android:color/white"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:background="@drawable/rounded_text"
                    android:paddingLeft="16dp"
                    android:id="@+id/bookName_editText"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/bookTitle_textview"
                    app:layout_constraintStart_toStartOf="@+id/bookTitle_textview"
                    app:layout_constraintEnd_toEndOf="@+id/bookTitle_textview" android:hint="Your Name"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:background="@drawable/rounded_text"
                    android:hint="10 Digit Phone Number"
                    android:paddingLeft="16dp"
                    android:ems="10"
                    android:id="@+id/phone_editText"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/bookName_editText"
                    app:layout_constraintStart_toStartOf="@+id/bookName_editText"
                    app:layout_constraintEnd_toEndOf="@+id/bookName_editText"/>
            <Button
                    android:text="Date"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_buttons"
                    android:layout_height="50dp" android:id="@+id/date_button"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/phone_editText"
                    app:layout_constraintStart_toStartOf="@+id/phone_editText"
                    app:layout_constraintEnd_toEndOf="@+id/phone_editText" android:textColor="@android:color/white"
                    android:textSize="20sp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp" android:id="@+id/date_textview"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/date_button"
                    app:layout_constraintStart_toStartOf="@+id/date_button"
                    app:layout_constraintEnd_toEndOf="@+id/date_button"
                    android:textSize="20sp" android:textColor="@android:color/white"/>
            <Button
                    android:text="Pick a Time"
                    android:layout_width="0dp"
                    android:layout_height="50dp" android:id="@+id/time_button"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_buttons"
                    app:layout_constraintTop_toBottomOf="@+id/date_textview"
                    app:layout_constraintStart_toStartOf="@+id/date_textview"
                    app:layout_constraintEnd_toEndOf="@+id/date_textview"
                    android:textSize="20sp" android:textColor="@android:color/white"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp" android:id="@+id/time_textview"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/time_button"
                    app:layout_constraintStart_toStartOf="@+id/time_button"
                    app:layout_constraintEnd_toEndOf="@+id/time_button" android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            <Button
                    android:text="Save"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_buttons"
                    android:layout_height="50dp" android:id="@+id/save_button"
                    app:layout_constraintStart_toStartOf="@+id/time_textview"
                    app:layout_constraintEnd_toEndOf="@+id/time_textview"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/time_textview" android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            <Button
                    android:text="Cancel"
                    android:layout_width="0dp"
                    android:background="@drawable/rounded_buttons"
                    android:layout_height="50dp" android:id="@+id/cancel_button"
                    app:layout_constraintStart_toStartOf="@+id/save_button"
                    app:layout_constraintEnd_toEndOf="@+id/save_button"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/save_button" android:textSize="20sp"
                    android:textColor="@android:color/white"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>