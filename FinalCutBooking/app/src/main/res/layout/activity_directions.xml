<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".directionsActivity">

    <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            mapbox:mapbox_cameraTargetLat = "43.6150"
            mapbox:mapbox_cameraTargetLng = "-116.2023"
            mapbox:mapbox_styleUrl = "mapbox://styles/mapbox/streets-v11"
            mapbox:mapbox_cameraZoom = "13"
            >
    </com.mapbox.mapboxsdk.maps.MapView>
    <Button
            android:text="Start Navigation"
            android:layout_width="0dp"
            android:background="@drawable/rounded_buttons"
            android:layout_height="50dp" android:id="@+id/navigate_button"
            mapbox:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" mapbox:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginBottom="32dp"
            mapbox:layout_constraintBottom_toBottomOf="parent" android:textSize="20sp"
            android:textColor="@android:color/white"/>

</android.support.constraint.ConstraintLayout>